{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}
    <div class = "row" style= "justify-content: center; margin-top: 40px;">

{% for lacategorie in lescategories %}
    {# {{dump(lescontacts)}} #}
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
            <div class="card mb-3">
                <h4 class="card-title text-center">{{lacategorie.libelle}}</h4>
                <img style="height: auto; max-width: 200px; display: block;" src="{{lacategorie.image}}" class="avatar mx-auto my-3" alt="image avatar">
                
                <a href="{{path('fichecategorie', {'id': lacategorie.id})}}" class = "btn btn-secondary text-center w-100%">Details</a>   

            </div> 
        </div>  
{% endfor %}
        </div>


{% endblock %}
